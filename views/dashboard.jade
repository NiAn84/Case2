extends layout

block content
    h1 Welcome #{user.first_name}
    img(src="/images/avatars/#{user.avatar}")
    p Info about you:
        p First Name: #{user.first_name}
        p Last Name: #{user.last_name}
        p Email: #{user.email}
        p Username: #{user.username}
        br
        p Your car:
        p Manufacturer: #{user.car.manufacturer}
        p Model: #{user.car.model}
        p Year: #{user.car.year}
        p Color: #{user.car.color}
        p Engine: #{user.car.engine}