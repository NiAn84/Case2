extends ../layout

block content
    h1= title
    table.user_table
        tr
            th First Name
            th Last Name
            th Email
            th Username
            th Car Reg.Nr
            th Car Details
            th Delete
        if user_list && user_list.length > 0
            each user in user_list
                tr
                    td #{user.first_name}
                    td #{user.last_name}
                    td #{user.email}
                    td #{user.username}
                    td #{user.car.reg}
                    td #{user.car.car} - #{user.car.color}
                    td.center
                        if(userid !== user.id)
                            a(href="/users/delete?id=#{user.id}")
                                img.icon(src="/images/delete.png")
                        else
                            a(href="/users/deleteself?id=#{user.id}")
                                img.icon(src="/images/deleteself.png")
        else
            tr
                td(colspan=7) No records