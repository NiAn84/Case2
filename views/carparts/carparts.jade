extends ../layout

block content
    h1= title
    table.user_table
        tr
            th Name
            th Description
            th Manufacturer
            th Supplier
            th Fits Carmodel
            th In Price
            th Out Price
            th Update Price
            th Delete
        if carpart_list && carpart_list.length > 0
            each carpart in carpart_list
                tr
                    td #{carpart.name}
                    td #{carpart.description}
                    td #{carpart.details.manufacturer}
                    td #{carpart.details.supplier}
                    td #{carpart.details.fits}
                    td #{carpart.details.inprice}
                    td #{carpart.details.outprice}
                    td.center
                        form(action='/carparts/updateprice?partid=#{carpart.id}', method='post')
                            label(for='inout')
                                span
                                select.input_box(type="number", name="inout", id="inout", required="true")
                                    option(value=1) In Price
                                    option(value=5) Out Price
                            label.input_box(for='price')
                                span
                                input(type='number', name='price', id='price', required='true')
                            label.input_box(for='submit')
                                span
                                input(type='submit', id='submit', value='Save')  
                    td.center
                        a(href="/carparts/delete?id=#{carpart.id}")
                            img.icon(src="/images/delete.png")
        else
            tr
                td(colspan=9) No records